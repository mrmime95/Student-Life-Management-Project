<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halcyon.ubb.studentlifemanager">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme.SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".NotifyReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".NotifyService"
            android:enabled="true" />
        <!-- TODO CR: Close XML tags if there isn't any content between them. [Peter] -->
        <activity android:name=".CourseDetail" />
        <activity
            android:name=".view.TimetableSettingsActivity"
            android:label="@string/title_activity_timetable_settings"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.halcyon.ubb.studentlifemanager.view.MainActivity" />
        </activity>
        <activity
            android:name=".view.LocalTimetableSettingsActivity"
            android:label="@string/title_activity_local_timetable_settings"
            android:parentActivityName=".view.TimetableSettingsActivity"
            android:theme="@style/AppTheme.Base">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.halcyon.ubb.studentlifemanager.view.TimetableSettingsActivity" />
        </activity>
    </application>

</manifest>