<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/courseCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    style="?attr/cardStyle"
    app:cardCornerRadius="2dp"
    android:elevation="2dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:id="@+id/contact_image"
                android:scaleType="centerCrop"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/headerLinearLay"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/backBtn"
                android:src="@drawable/icattachfile"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="16dp"
                />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/courseTitle"
                    tools:text="Kurzuscikk cime, ami ahhoz kell hogy láthassuk, hogy milyen lesz az előnézet"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_toStartOf="@+id/backBtn"
                    android:maxLines="3"
                    android:ellipsize="end"
                    />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
